# Frontend environment variables (used by Vite)
# These are injected by Doppler via `doppler run -- vite`

VITE_AUTH0_DOMAIN=https://your-tenant.auth0.com/
VITE_AUTH0_CLIENT_ID=your-client-id
VITE_AUTH0_AUDIENCE=https://hub.unstablestudios.com/api
VITE_AUTH0_ORGANIZATION=org_xxxxx

# Feature flags (Vite exposes these via envPrefix config)
# Set to 'true' to enable organization features (global/personal distinction)
FEATURE_ORGS=false
# Set to 'true' to enable the admin panel
FEATURE_ADMIN_PANEL=false
# Set to 'true' to enable shared links/docs (vs per-user content)
FEATURE_SHARED_CONTENT=true
