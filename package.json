		"@auth0/auth0-react": "^2.11.0",
		"@radix-ui/react-avatar": "^1.1.11",
		"@radix-ui/react-context-menu": "^2.2.16",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-popover": "^1.1.15",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-tabs": "^1.1.13",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"hono": "4.11.3",
		"jose": "^6.1.3",
		"lucide-react": "^0.562.0",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"react-icons": "^5.5.0",
		"react-markdown": "^10.1.0",
		"react-router": "^7.10.1",
		"rehype-sanitize": "^6.0.0",
		"remark-gfm": "^4.0.1",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.18"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "1.17.0",
		"@cloudflare/workers-types": "^4.20260124.0",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@commitlint/cz-commitlint": "^20.2.0",
		"@commitlint/prompt": "^20.2.0",
		"@commitlint/prompt-cli": "^20.2.0",
		"@eslint/js": "9.39.2",
		"@types/node": "^25.0.3",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"@vitejs/plugin-react": "5.1.2",
		"eslint": "9.39.2",
		"eslint-plugin-react-hooks": "7.0.1",
		"eslint-plugin-react-refresh": "0.4.26",
		"globals": "16.5.0",
		"husky": "^9.1.7",
		"prettier": "^3.7.4",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"shadcn": "^3.6.2",
		"tsx": "^4.21.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "5.9.3",
		"typescript-eslint": "8.50.1",
		"vite": "^7.3.0",
		"vite-plugin-svgr": "^4.5.0",
		"wrangler": "^4.54.0"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	},
	"scripts": {
		"build": "tsc -b && vite build",
		"build:prod": "doppler run -- sh -c 'VITE_AUTH0_DOMAIN=$AUTH0_DOMAIN VITE_AUTH0_CLIENT_ID=$AUTH0_CLIENT_ID VITE_AUTH0_AUDIENCE=$AUTH0_AUDIENCE npm run build'",
		"format": "prettier --write .",
		"cf-typegen": "wrangler types",
		"typecheck": "tsc --noEmit",
		"check": "tsc && vite build && doppler run -- wrangler deploy --dry-run",
		"deploy": "npm run build:prod && doppler run -- wrangler deploy",
		"dev": "doppler run -- sh -c './scripts/gen-dev-vars.sh && vite'",
		"dev:local": "vite",
		"lint": "eslint .",
		"commitlint": "commitlint --edit",
		"commit": "cz",
		"prepare": "husky",
		"db:migrate": "doppler run -- wrangler d1 execute echo-hub --remote",
		"db:migrate:local": "wrangler d1 execute echo-hub --local"
	},
	"packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6"
